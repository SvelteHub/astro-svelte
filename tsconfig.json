{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@content/*": ["src/content/*"],
      "@config/*": ["src/config/*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["./node_modules/**"],
  "extends": "astro/tsconfigs/strict"
}
